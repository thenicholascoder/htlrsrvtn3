<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Hotel Listings Manager", hotel_listings_manager_path %></li>
    <li><%= link_to "Manage Bookings", hotel_listings_manager_bookings_path %></li>
    <li><%= link_to "Create New Booking", new_hotel_listings_manager_booking_path %></li>
  </ol>
</nav>
<h1>Create a new Booking</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @reservation, url: hotel_listings_manager_bookings_path) do |form| %>
      <% if @reservation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>
          <ul>
          <% @reservation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= form.label :guest_prefix %>
        <%= form.text_field :guest_prefix, class: 'form-control' %>

        <%= form.label :guest_firstname %>
        <%= form.text_field :guest_firstname, class: 'form-control' %>

        <%= form.label :guest_lastname %>
        <%= form.text_field :guest_lastname, class: 'form-control' %>

        <%= form.label :guest_phone %>
        <%= form.text_field :guest_phone, class: 'form-control' %>

        <%= form.label :guest_email %>
        <%= form.email_field :guest_email, class: 'form-control' %>

        <%= form.label :guest_country %>
        <%= form.text_field :guest_country, class: 'form-control' %>

        <%= form.label :guest_address %>
        <%= form.text_field :guest_address, class: 'form-control' %>

        <%= form.label :guest_city %>
        <%= form.text_field :guest_city, class: 'form-control' %>

        <%= form.label :guest_zip_code %>
        <%= form.text_field :guest_zip_code, class: 'form-control' %>

        <%= form.label :guest_check_in_reason %>
        <%= form.text_field :guest_check_in_reason, class: 'form-control' %>

        <%= form.label :guest_special_needs %>
        <%= form.text_field :guest_special_needs, class: 'form-control' %>

        <%= form.label :check_in_date %>
        <%= form.date_field :check_in_date, class: 'form-control' %>

        <%= form.label :check_out_date %>
        <%= form.date_field :check_out_date, class: 'form-control' %>

        <%= form.label :adults_count %>
        <%= form.number_field :adults_count, class: 'form-control' %>

        <%= form.label :children_count %>
        <%= form.number_field :children_count, class: 'form-control' %>

        <%= form.label :total_bill %>
        <%= form.number_field :total_bill, class: 'form-control' %>

        <%= form.label :user_id %>
        <%= form.number_field :user_id, class: 'form-control' %>

        <%= form.label :room_id %>
        <%= form.number_field :room_id, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= form.submit "Create a Booking", class: "btn btn-primary" %>
        <%= link_to "Cancel", retrieve_last_page_or_default(default_path: hotel_listings_manager_bookings_path), class: "btn", data: { turbo_confirm: "You sure?"}%>
      </div>
    <% end %>
  </div>
</div>