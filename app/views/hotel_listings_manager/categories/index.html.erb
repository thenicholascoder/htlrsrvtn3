<nav aria-label="breadcrumb">
<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
  <li class="breadcrumb-item"><%= link_to "Hotel Listings Manager", hotel_listings_manager_path %></li>
  <li><%= link_to "Manage Categories", hotel_listings_manager_categories_path %></li>
</ol>
</nav>
<h1>Manage Categories</h1>
<%= link_to "Create a new Category", new_hotel_listings_manager_category_path, class: "btn btn-success" %>
<% if @categories.length == 0 %>
  <br><br><i>The Category database is empty.</i>
<% else %>
  <%= will_paginate @categories %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th colspan="2" scope="col" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <ul>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= category.name %></td>
          <td><%= link_to 'Update', edit_hotel_listings_manager_category_path(category.id), class: "btn btn-primary btn-sm" %></td>
          <td><%= button_to "Delete", hotel_listings_manager_category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </ul>

  </tbody>
  </table>
  <%= will_paginate @categories %>
<% end %>